<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_horizontal"
    android:background="@drawable/basketball"
    android:orientation="vertical"

    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/cardview_shadow_start_color"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="@color/cardview_shadow_start_color"
            android:orientation="vertical">

            <TextView

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:padding="4dp"
                android:textSize="14sp"
                android:text="Team A"
                android:textColor="@android:color/holo_blue_light" />

            <TextView
                android:id="@+id/team_a_score"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/holo_blue_light"
                android:gravity="center_horizontal"
                android:padding="4dp"
                android:textSize="56sp"
                android:text="0"
                android:textColor="@android:color/black" />

            <Button
                android:id="@+id/btn_3pnt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:onClick="threePointForTeamA"
                android:text="+3 Points"
                android:backgroundTint="@color/cardview_shadow_start_color"
                android:textColor="@android:color/holo_blue_light" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:onClick="twoPointForTeamA"
                android:text="+2 Points"
                android:backgroundTint="@color/cardview_shadow_start_color"
                android:textColor="@android:color/holo_blue_light" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:onClick="freeThrowForTeamA"
                android:text="Free Throw"
                android:backgroundTint="@color/cardview_shadow_start_color"
                android:textColor="@android:color/holo_blue_light" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="@color/cardview_shadow_start_color"
            android:orientation="vertical">

            <TextView

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:padding="4dp"
                android:textSize="14sp"
                android:text="Team B"
                android:textColor="@android:color/holo_green_light" />

            <TextView
                android:id="@+id/team_b_score"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/holo_green_light"
                android:gravity="center_horizontal"
                android:padding="4dp"
                android:text="0"
                android:textSize="56sp"
                android:textColor="@android:color/black" />

            <Button
                android:id="@+id/btnb_3pnt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:onClick="threePointForTeamB"
                android:text="+3 Points"
                android:backgroundTint="@color/cardview_shadow_start_color"
                android:textColor="@android:color/holo_green_light" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:onClick="twoPointForTeamB"
                android:text="+2 Points"
                android:backgroundTint="@color/cardview_shadow_start_color"
                android:textColor="@android:color/holo_green_light" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:onClick="freeThrowForTeamB"
                android:text="Free Throw"
                android:backgroundTint="@color/cardview_shadow_start_color"
                android:textColor="@android:color/holo_green_light" />
        </LinearLayout>

    </LinearLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        android:backgroundTint="@color/cardview_shadow_start_color"
        android:onClick="resetAll"
        android:text="reset"
        android:textAllCaps="true"
        android:textColor="@android:color/holo_red_dark"
        android:textColorHighlight="@color/white" />
</RelativeLayout>